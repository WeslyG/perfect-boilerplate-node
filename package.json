{
  "name": "perfect-boilerplate-node",
  "version": "1.0.0",
  "description": "Template for create your nodejs backend app in one minute",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "start": "webpack --config webpack.dev.js",
    "lint": "eslint app.js src/",
    "updep": "rm -rf package-lock.json yarn.lock && yarn && yarn upgrade && npm i",
    "dockerBuild": "docker build -t $npm_package_dockerLogin/$npm_package_name:$npm_package_version .",
    "dockerPush": "docker push $npm_package_dockerLogin/$npm_package_name:$npm_package_version"
  },
  "author": "WeslyG",
  "dockerLogin": "weslyg",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "corejs": {
            "version": 3,
            "proposals": true
          }
        }
      ]
    ]
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.6.5",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "nodemon-webpack-plugin": "^4.3.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "engines": {
    "node": "^12.16.0",
    "npm": "^6.14.0",
    "yarn": "^1.22.0"
  }
}
