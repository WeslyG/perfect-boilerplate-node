{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "import",
    "node",
    "promise",
    "sonarjs"
  ],
  "settings": {
    "import/resolver": "webpack"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "plugin:node/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-process-env": [ "error" ],
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unpublished-require": "off",
    "node/no-unpublished-import": "off",
    "no-unused-vars": [
      "warn"
    ],
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "require-await": [
      "error"
    ]
  }
}
