{
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "import",
    "node",
    "promise",
    "sonarjs",
    "@typescript-eslint"
  ],
  "settings": {
    // "import/resolver": "webpack",
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "plugin:node/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "off"
    ],
    "semi": [
      "off"
    ],
    "quotes": [
      "off"
    ],
    "linebreak-style": [
      "off"
    ],
    "node/no-unpublished-require": "off",
    "node/no-unpublished-import": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-missing-import": [
      "error",
      {
        "allowModules": [],
        "resolvePaths": [
          "."
        ],
        "tryExtensions": [
          ".js",
          ".ts",
          ".json"
        ]
      }
    ],
    "no-process-env": [
      "error"
    ],
    "object-shorthand": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "require-await": [
      "error"
    ],
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ]
  }
}